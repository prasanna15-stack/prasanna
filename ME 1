
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Calculator</title>
  <style>
    body { display:flex; justify-content:center; align-items:center; height:100vh; }
    .calc { padding:20px; background:#ddd; }
    #display { width:100%; margin-bottom:10px; text-align:right; }
    .buttons { display:grid; grid-template-columns:repeat(4,50px); gap:5px; }
    button { padding:10px; }
    .zero { grid-column:span 2; }
  </style>
</head>
<body>
  <div class="calc">
    <input id="display" readonly>
    <div class="buttons">
      <button data-act="clear">C</button>
      <button data-act="del">DEL</button>
      <button data-val="/">÷</button>
      <button data-val="*">×</button>
      <button data-val="7">7</button><button data-val="8">8</button><button data-val="9">9</button><button data-val="-">−</button>
      <button data-val="4">4</button><button data-val="5">5</button><button data-val="6">6</button><button data-val="+">+</button>
      <button data-val="1">1</button><button data-val="2">2</button><button data-val="3">3</button><button data-act="calc">=</button>
      <button data-val="0" class="zero">0</button><button data-val=".">.</button>
    </div>
  </div>

  <script>
    const d = document.getElementById("display");
    document.querySelectorAll("button").forEach(b => b.onclick = () => {
      if (b.dataset.val) d.value += b.dataset.val;
      else if (b.dataset.act === "clear") d.value = "";
      else if (b.dataset.act === "del") d.value = d.value.slice(0,-1);
      else if (b.dataset.act === "calc") try{ d.value = eval(d.value) }catch{ d.value="Err" }
    });
  </script>
</body>
</html>
